<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%throwable%n"/>
    </Console>
  </appenders>
  <loggers>
    <logger name="net.blerf.ftl" level="trace" additivity="false">
      <appender-ref ref="Console"/>
    </logger>
    <logger name="net.ntg.ftl" level="trace" additivity="false">
      <appender-ref ref="Console"/>
    </logger>
    <root level="error">
      <appender-ref ref="Console"/>
    </root>
  </loggers>
</configuration>